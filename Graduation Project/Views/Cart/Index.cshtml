@model Graduation_Project.Models.Cart
@{
    ViewData["Title"] = "Your Cart";
}

<div class="container my-5">
    <h2 class="text-center mb-4">Your Cart</h2>

    <!-- Error/Success Message Placeholder -->
    <div id="cartMessage" class="alert d-none" role="alert"></div>

    @if (Model == null || Model.CartItems == null || !Model.CartItems.Any())
    {
        <div class="col-12 text-center text-muted">
            <p>Your cart is empty.</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Continue Shopping</a>
        </div>
    }
    else
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CartItems)
                {
                    <tr>
                        <td>
                            <img src="@(string.IsNullOrEmpty(item.Product.ImageUrl) ? "/images/products/no-image.png" : item.Product.ImageUrl)"
                                 class="img-fluid rounded"
                                 alt="@item.Product.Name"
                                 style="max-height: 50px; object-fit: cover;" />
                        </td>
                        <td>@item.Product.Name</td>
                        <td>@item.Product.Price.ToString("C")</td>
                        <td>
                            <form class="update-quantity-form" data-cart-item-id="@item.CartItemId">
                                <input type="number" name="quantity" value="@item.Quantity" min="1" max="@item.Product.StockQuantity" class="form-control d-inline w-50" />
                                <button type="submit" class="btn btn-primary btn-sm">Update</button>
                            </form>
                        </td>
                        <td>@((item.Quantity * item.Product.Price).ToString("C"))</td>
                        <td>
                            <form asp-controller="Cart" asp-action="RemoveFromCart" method="post">
                                <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Cart Actions -->
        <div class="text-end mt-4">
            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Continue Shopping</a>
            <a href="@Url.Action("Checkout", "Cart")" class="btn btn-primary">Complete Order</a>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.update-quantity-form').submit(function (e) {
                e.preventDefault();
                var form = $(this);
                var cartItemId = form.data('cart-item-id');
                var quantity = form.find('input[name="quantity"]').val();
                var messageDiv = $('#cartMessage');

                console.log("Updating quantity for CartItemId:", cartItemId, "Quantity:", quantity); // Debugging

                $.ajax({
                    url: '@Url.Action("UpdateQuantity", "Cart")',
                    type: 'POST',
                    data: { cartItemId: cartItemId, quantity: quantity },
                    success: function (response) {
                        console.log("AJAX response:", response); // Debugging
                        if (response.success) {
                            messageDiv.removeClass('alert-danger d-none').addClass('alert-success').text(response.message);
                            setTimeout(function () {
                                location.reload(); // Reload to update cart totals
                            }, 2000);
                        } else {
                            messageDiv.removeClass('alert-success d-none').addClass('alert-danger').text(response.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("AJAX error:", status, error); // Debugging
                        messageDiv.removeClass('alert-success d-none').addClass('alert-danger').text('An error occurred. Please try again.');
                    }
                });
            });
        });
    </script>
}