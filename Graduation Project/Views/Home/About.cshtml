@section Styles {
    <style>
        /* Hero Section */
        .about-hero {
            position: relative;
            min-height: 500px;
            display: flex;
            align-items: center;
        }

        .parallax-bg {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
        }

        /* Mobile fallback for parallax effect */
        @@media (max-width: 767.98px) {
            .parallax-bg {
                background-attachment: scroll;
            }
        }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, rgba(0,0,0,0.7), rgba(0,0,0,0.4));
        }

        .z-1 {
            z-index: 1;
        }

        .min-vh-50 {
            min-height: 50vh;
        }

        /* Animation Classes */
        .animate-in {
            opacity: 0;
            transform: translateY(20px);
            animation: fadeInUp 0.6s ease forwards;
        }

        .animate-delay-1 {
            animation-delay: 0.2s;
        }

        .animate-delay-2 {
            animation-delay: 0.4s;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* For users who prefer reduced motion */
        @@media (prefers-reduced-motion: reduce) {
            .animate-in {
                animation: none;
                opacity: 1;
                transform: translateY(0);
            }
            
            .parallax-bg {
                background-attachment: scroll;
            }
        }

        /* Smooth Scroll */
        html {
            scroll-behavior: smooth;
        }
        
        /* For Safari compatibility */
        .smooth-scroll {
            transition: all 0.3s ease;
        }

        /* Timeline Styling */
        .timeline {
            position: relative;
            max-width: 1000px;
            margin: 0 auto;
            padding: 40px 0;
        }

        .timeline::before {
            content: '';
            position: absolute;
            top: 0;
            left: 50%;
            width: 2px;
            height: 100%;
            background: #dee2e6;
            transform: translateX(-50%);
        }

        .timeline-item {
            position: relative;
            width: 50%;
            padding: 0 40px 50px 0;
            text-align: right;
        }

        .timeline-item.right {
            margin-left: 50%;
            padding: 0 0 50px 40px;
            text-align: left;
        }

        .timeline-dot {
            position: absolute;
            top: 10px;
            right: -9px;
            width: 18px;
            height: 18px;
            border-radius: 50%;
            background: var(--bs-primary);
            z-index: 1;
        }

        .timeline-item.right .timeline-dot {
            right: auto;
            left: -9px;
        }

        .timeline-content {
            background: #fff;
            padding: 20px;
            border-radius: 6px;
            position: relative;
        }

        .timeline-date {
            display: inline-block;
            padding: 5px 15px;
            background: var(--bs-primary);
            color: white;
            border-radius: 20px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        /* Card Hover Effect */
        .hover-lift {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .hover-lift:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }

        /* Team Card Styling */
        .team-card img {
            height: 300px;
            object-fit: cover;
        }

        .social-icons a {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 36px;
            height: 36px;
            border-radius: 50%;
            background: rgba(var(--bs-primary-rgb), 0.1);
            color: var(--bs-primary);
            transition: all 0.3s ease;
        }

        .social-icons a:hover {
            background: var(--bs-primary);
            color: white;
        }

        /* Icon Box */
        .icon-box {
            width: 80px;
            height: 80px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            background: rgba(var(--bs-primary-rgb), 0.1);
        }

        .text-lg-start{
            width: fit-content;
        }

        /* Media Queries for Timeline Responsiveness */
        @@media (max-width: 767.98px) {
            /* Timeline adjustments */
            .timeline::before {
                left: 40px;
            }

            .timeline-item, .timeline-item.right {
                width: 100%;
                padding-left: 80px;
                padding-right: 0;
                text-align: left;
                margin-left: 0;
            }

            .timeline-dot, .timeline-item.right .timeline-dot {
                left: 31px;
                right: auto;
            }
            
            /* Team card adjustments */
            .team-card {
                margin-bottom: 30px;
            }
            
            /* Mission section adjustments */
            .position-relative .position-absolute {
                display: none; /* Hide decorative border on mobile */
            }
            
            /* Font size adjustments for mobile */
            .display-3 {
                font-size: calc(1.375rem + 1.5vw);
            }
            
            .display-5 {
                font-size: calc(1.3rem + 0.9vw);
            }
        }
    </style>
}

@section Scripts {
    <script>
        // Smooth scroll implementation for Safari and older browsers
        document.addEventListener('DOMContentLoaded', function() {
            const smoothScrollLinks = document.querySelectorAll('.smooth-scroll');
            
            smoothScrollLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    const targetId = this.getAttribute('href');
                    const targetElement = document.querySelector(targetId);
                    
                    if (targetElement) {
                        const offsetTop = targetElement.getBoundingClientRect().top + window.pageYOffset;
                        
                        window.scrollTo({
                            top: offsetTop,
                            behavior: 'smooth'
                        });
                    }
                });
            });
            
            // Fix for iOS parallax issues
            if (/iPhone|iPad|iPod/i.test(navigator.userAgent)) {
                const parallaxBg = document.querySelector('.parallax-bg');
                if (parallaxBg) {
                    parallaxBg.style.backgroundAttachment = 'scroll';
                }
            }
        });
    </script>
}