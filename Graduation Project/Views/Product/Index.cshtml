@model List<Product>
@{
    ViewData["Title"] = "Product List";
}

<div class="container my-5">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <!-- New Product Button -->
    <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-primary" asp-controller="Products" asp-action="Create">New Product</a>
    </div>

    <!-- Products Table -->
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
@*                     <th>Brand</th>
 *@                 <th>Category</th>
                    <th>Price ($)</th>
                    <th>Image</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.ProductId</td>
                            <td>@product.Name</td>
@*                             <td>@product.Brand</td>
 *@                            <td>@product.Category?.Name</td>
                            <td>@product.Price.ToString("F2")</td>
                            <td>
                                <img src="@(!string.IsNullOrEmpty(product.ImageUrl) ? product.ImageUrl : "/images/products/no-image.png")"
                                     alt="Product Image"
                                     width="80"
                                     class="img-thumbnail" />
                            </td>
                            <td>@product.CreatedAt.ToString("MMM dd, yyyy")</td>
                            <td class="text-nowrap">
                                <a class="btn btn-sm btn-outline-primary me-1"
                                   asp-controller="Products"
                                   asp-action="Edit"
                                   asp-route-id="@product.ProductId">Edit</a>

                                <a class="btn btn-sm btn-outline-danger me-1"
                                   asp-controller="Products"
                                   asp-action="Delete"
                                   asp-route-id="@product.ProductId"
                                   onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted">No products found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>