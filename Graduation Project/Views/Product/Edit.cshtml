@model ProductDto

@{
    ViewData["Title"] = "Edit Product";
}

<div class="row justify-content-center">
    <div class="col-md-8 rounded border p-4 shadow-sm bg-light">
        <h2 class="text-center text-primary mb-4">Edit Product</h2>

        <form method="post" enctype="multipart/form-data">

            <!-- ID -->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label fw-bold">ID</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" readonly value="@ViewData["ProductId"]">
                </div>
            </div>

            <!-- Name -->
            <div class="row mb-3">
                <label asp-for="Name" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <!-- Description -->
            <div class="row mb-3">
                <label asp-for="Description" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <!-- Price -->
            <div class="row mb-3">
                <label asp-for="Price" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <!-- Stock Quantity -->
            <div class="row mb-3">
                <label asp-for="StockQuantity" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="StockQuantity" class="form-control" type="number" min="0" />
                    <span asp-validation-for="StockQuantity" class="text-danger"></span>
                </div>
            </div>

            <!-- SKU -->
            <div class="row mb-3">
                <label asp-for="Sku" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Sku" class="form-control" />
                    <span asp-validation-for="Sku" class="text-danger"></span>
                </div>
            </div>

            <!-- Category -->
            <div class="row mb-3">
                <label asp-for="CategoryId" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                        <option value="">-- Select Category --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>

            <!-- Status -->
            <div class="row mb-3">
                <label asp-for="Status" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="Status" class="form-control" />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>

            <!-- Current Image -->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Current Image</label>
                <div class="col-sm-8">
                    <img src="/images/products/@ViewData["ImageFileName"]" width="150" class="img-thumbnail" />
                </div>
            </div>

            <!-- Image Upload -->
            <div class="row mb-3">
                <label asp-for="ImageFile" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-8">
                    <input asp-for="ImageFile" class="form-control" accept="image/*" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
            </div>

            <!-- Created At -->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Created At</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" readonly value="@ViewData["CreatedAt"]">
                </div>
            </div>

            <!-- Submit + Cancel Buttons -->
            <div class="row mt-4">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-success">Update</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}