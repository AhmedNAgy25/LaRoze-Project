@model Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container my-5">
    <h2 class="text-center mb-4 text-danger">Delete Product</h2>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger text-white text-center">
                    <h4>Are you sure you want to delete this product?</h4>
                </div>
                <div class="card-body">
                    <dl class="row">

                        <dt class="col-sm-4">ID</dt>
                        <dd class="col-sm-8">@Model.ProductId</dd>

                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4">Price</dt>
                        <dd class="col-sm-8">@Model.Price.ToString("C")</dd>

                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8">@Model.Category?.Name</dd>

                        <dt class="col-sm-4">Image</dt>
                        <dd class="col-sm-8">
                            <img src="@(!string.IsNullOrEmpty(Model.ImageUrl) ? Model.ImageUrl : "/images/products/no-image.png")"
                                 alt="Product Image"
                                 width="100"
                                 class="img-thumbnail" />
                        </dd>
                    </dl>

                    <form asp-action="DeleteConfirmed" method="post" class="mt-4">
                        <input type="hidden" name="id" value="@Model.ProductId" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>