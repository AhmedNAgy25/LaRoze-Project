<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Graduation_Project</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Custom Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Graduation_Project.styles.css" asp-append-version="true" />

    <style>
        /* Navbar */
        .navbar {
            background: linear-gradient(to right, #1d4038, #2c705e);
        }

        .nav-link {
            color: #ffffff !important;
            transition: all 0.3s ease;
        }

            .nav-link:hover {
                color: #f8f9fa !important;
                transform: translateY(-2px);
            }

        .navbar-brand {
            font-weight: bold;
            color: #fff !important;
        }

        main {
            padding-top: 70px; /* Space for fixed navbar */
        }

        /* Dropdown Styling */
        .dropdown-menu {
            min-width: 200px;
            background-color: #ffffffee;
            backdrop-filter: blur(6px);
            border: none;
        }

        .dropdown-item:hover {
            background-color: #e0e0e088;
        }

        .btn-outline-light:hover {
            background-color: #ffffff;
            color: #1d4038 !important;
            border-color: #ffffff;
        }

        /* Footer */
        footer.bg-dark {
            background-color: #1a1a1a !important;
            color: #ccc;
        }

        footer a {
            color: #ccc;
            text-decoration: none;
            transition: color 0.3s;
        }

            footer a:hover {
                color: #fff;
            }

        footer hr {
            background-color: #444;
        }
    </style>
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-gradient shadow fixed-top">
            <div class="container-fluid">
                <!-- Brand / Logo -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-mortarboard-fill me-2"></i> Graduation Project
                </a>

                <!-- Toggle Button for Mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Links -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item mx-2">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item mx-2">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <!-- Admin Dropdown (Visible Only to Admins) -->
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown mx-2">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownAdmin" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdownAdmin">
                                    <li><a class="dropdown-item" href="#">Dashboard</a></li>
                                    <li><a class="dropdown-item" href="#">Manage Users</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="#">Settings</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <!-- Right-Aligned Auth Buttons or Profile -->
                    <ul class="navbar-nav ms-auto">
                        @{
                            if (!(User.Identity?.IsAuthenticated ?? false))
                            {
                                <li class="nav-item d-flex align-items-center">
                                    <a class="btn btn-outline-light btn-sm me-2" asp-controller="Account" asp-action="Login">Login</a>
                                    <a class="btn btn-light text-dark fw-bold btn-sm" asp-controller="Account" asp-action="Register">Register</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item dropdown mx-2">
                                    <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdownProfile" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-person-circle me-1"></i> @User.Identity.Name
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownProfile">
                                        <li><a class="dropdown-item" href="#">Profile</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a></li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>



    <!-- JavaScript -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>