@model IEnumerable<Graduation_Project.Models.UserAddress>
@{
    ViewData["Title"] = "My Addresses";
}

<div class="container my-5">
    <div class="row">
        <!-- Sidebar -->
        <partial name="_AccountSidebar" />

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="card shadow">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">My Addresses</h5>
                    <a asp-action="Create" class="btn btn-primary btn-sm">
                        <i class="bi bi-plus-lg"></i> Add New Address
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-geo-alt" style="font-size: 3rem; color: #ccc;"></i>
                            <h5 class="mt-3">No Addresses Found</h5>
                            <p class="text-muted">You haven't added any addresses yet.</p>
                            <a asp-action="Create" class="btn btn-primary mt-2">Add New Address</a>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            @foreach (var address in Model)
                            {
                                <div class="col-md-6 mb-4">
                                    <div class="card h-100 @(address.IsDefault ? "border-primary" : "")">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <h6 class="card-title mb-0">
                                                    @address.FullName
                                                    @if (address.IsDefault)
                                                    {
                                                        <span class="badge bg-primary ms-2">Default</span>
                                                    }
                                                </h6>
                                                <span class="badge bg-secondary">Home</span>
                                            </div>
                                            <p class="card-text mb-1">@address.PhoneNumber</p>
                                            <p class="card-text mb-1">
                                                @address.StreetAddress
                                                @if (!string.IsNullOrEmpty(address.ApartmentNumber))
                                                {
                                                    <span>, @address.ApartmentNumber</span>
                                                }
                                            </p>
                                            <p class="card-text mb-1">
                                                @address.City, @address.State @address.PostalCode
                                            </p>
                                            <p class="card-text mb-3">@address.Country</p>
                                        </div>
                                        <div class="card-footer bg-transparent">
                                            <div class="d-flex justify-content-between">
                                                <div>
                                                    @if (!address.IsDefault)
                                                    {
                                                        <form asp-action="SetDefault" method="post" class="d-inline">
                                                            <input type="hidden" name="id" value="@address.AddressId" />
                                                            <button type="submit" class="btn btn-outline-primary btn-sm">
                                                                Set as Default
                                                            </button>
                                                        </form>
                                                    }
                                                </div>
                                                <div>
                                                    <a asp-action="Edit" asp-route-id="@address.AddressId" class="btn btn-outline-secondary btn-sm me-1">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-outline-danger btn-sm"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#deleteModal@(address.AddressId)">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Delete Modal -->
                                <div class="modal fade" id="deleteModal@(address.AddressId)" tabindex="-1" aria-labelledby="deleteModalLabel@(address.AddressId)" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="deleteModalLabel@(address.AddressId)">Confirm Delete</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                Are you sure you want to delete this address?
                                                <p class="mt-2 mb-0 fw-bold">@address.StreetAddress, @address.City</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <form asp-action="Delete" method="post">
                                                    <input type="hidden" name="id" value="@address.AddressId" />
                                                    <button type="submit" class="btn btn-danger">Delete</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

