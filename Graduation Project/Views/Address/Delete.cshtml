@model Graduation_Project.Models.UserAddress

@{
    ViewData["Title"] = "Delete Address";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-light">
                    <h2 class="mb-0">Delete Address</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4>Are you sure you want to delete this address?</h4>
                        <p>This action cannot be undone.</p>
                    </div>

                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">@(string.IsNullOrEmpty(Model.AddressName) ? "Address" : Model.AddressName)</h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-1"><strong>@Model.FullName</strong></p>
                            <p class="mb-1">@Model.StreetAddress</p>
                            <p class="mb-1">@Model.City, @Model.State @Model.PostalCode</p>
                            <p class="mb-1">@Model.Country</p>
                            <p class="mb-0">@Model.Phone</p>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="AddressId" />
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete Address</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


